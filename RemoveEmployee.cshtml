
@{
    ViewBag.Title = "RemoveEmployee";
    Layout = "~/Views/Shared/Manager.cshtml";
}

<h2>RemoveEmployee</h2>
<h2>Remove Employee</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@using (Html.BeginForm("RemoveEmployee", "Manager", FormMethod.Post))
{
    <div class="mb-3">
        <label for="employeeId" class="form-label">Employee ID</label>
        <input type="number" name="employeeId" id="employeeId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-warning">Remove Employee</button>
}

