
@{
    ViewBag.Title = "CloseLoanAccount";
    Layout = "~/Views/Shared/Manager.cshtml";
}

<h2>CloseLoanAccount</h2>
<div class="container mt-5" style="max-width: 500px;">
    <h2 class="text-center text-info mb-4">
        <i class="bi bi-x-circle me-2"></i> Close Loan Account
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-info text-center">@TempData["ErrorMessage"]</div>
    }

    @using (Html.BeginForm("CloseLoanAccount", "CloseAccount", FormMethod.Post))
    {
        <div class="mb-3">
            <label for="loanAccountId" class="form-label fw-bold">Loan Account ID</label>
            <input type="text" id="loanAccountId" name="loanAccountId" class="form-control" placeholder="Enter Loan Account ID" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-info w-50">Close Account</button>
        </div>
    }
</div>
