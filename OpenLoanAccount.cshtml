@model DataModel.Model.Home_Loan_Account
@{
    ViewBag.Title = "OpenLoanAccount";
    Layout = "~/Views/Shared/Manager.cshtml";
}


<h2>Open Loan Account</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@using (Html.BeginForm("OpenLoanAccount", "Manager", FormMethod.Post))
{
   

    <div class="mb-3">
        <label for="LN_CUSTOMER_ID" class="form-label">Customer ID</label>
        <input type="number" name="LN_CUSTOMER_ID" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="LN_AMOUNT" class="form-label">Loan Amount</label>
        <input type="number" step="0.01" name="LN_AMOUNT" class="form-control" required />
        @Html.ValidationMessageFor(c => c.LN_AMOUNT)
    </div>

    <div class="mb-3">
        <label for="LN_START_DATE" class="form-label">Start Date</label>
        <input type="date" name="LN_START_DATE" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="LN_TENURE" class="form-label">Tenure (in months)</label>
        <input type="number" name="LN_TENURE" class="form-control" required />
        @Html.ValidationMessageFor(c=>c.LN_TENURE)
    </div>

    <div class="mb-3">
        <label for="LN_ROI" class="form-label">Rate of Interest (%)</label>
        <input type="number" step="0.01" name="LN_ROI" class="form-control" required />
        @Html.ValidationMessageFor(c => c.LN_ROI)
    </div>

    <div class="mb-3">
        <label for="LN_SALARY" class="form-label">Salary</label>
        <input type="number" step="0.01" name="LN_SALARY" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Open Loan Account</button>
}

