@model List<DataModel.Model.Savings_Transaction> 

@{
    ViewBag.Title = "SavingsTransaction";
    Layout = "~/Views/Shared/Manager.cshtml";

    var accountId = ViewBag.AccountID as string ?? "";
    var currentBalance = ViewBag.CurrentBalance != null ? Convert.ToDecimal(ViewBag.CurrentBalance) : 0m;

    string selectedTransactionType = Request.Form["ST_Deposit_Withdrawl"];
    string enteredAmount = Request.Form["ST_Amount"];
}

<div class="container mt-5" style="max-width: 900px;">
    <h2 class="text-center text-primary fw-bold mb-4">
        <i class="bi bi-bank2 me-2"></i> Savings Account Transactions
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
    }

    <div class="card shadow-lg border-0 mb-4">
        <div class="card-body">
            @using (Html.BeginForm("SavingsTransaction", "Transaction", FormMethod.Post))
            {
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="accountId" class="form-label fw-bold">Account ID</label>
                        <input type="text" id="accountId" name="ST_Account_ID" value="@accountId" class="form-control" readonly />
                    </div>

                    <div class="col-md-4">
                        <label for="transactionType" class="form-label fw-bold">Transaction Type</label>
                        <select id="transactionType" name="ST_Deposit_Withdrawl" class="form-select" required>
                            <option value="">-- Select Type --</option>
                            <option value="Deposit" @(selectedTransactionType == "Deposit" ? "selected" : "")>Deposit</option>
                            <option value="Withdraw" @(selectedTransactionType == "Withdraw" ? "selected" : "")>Withdraw</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label for="amount" class="form-label fw-bold">Amount (₹)</label>
                        <input type="number" id="amount" name="ST_Amount" min="100" step="0.01" class="form-control" value="@(enteredAmount ?? "")" required />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary w-50">Submit Transaction</button>
                </div>
            }
        </div>
    </div>

    <h5 class="text-end text-success mb-3">💰 Current Balance: ₹@currentBalance.ToString("N2")</h5>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered table-striped text-center shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Amount (₹)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var txn in Model)
                {
                    <tr>
                        <td>@txn.ST_TRANSACTION_ID</td>
                        <td>@txn.ST_TRANSACTION_DATE</td>
                        <td>@txn.ST_WITHDRAWL</td>
                        <td>@txn.ST_AMOUNT</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">No transactions found for this account.</div>
    }
</div>

<style>
    .card {
        border-radius: 15px;
    }

    table {
        border-radius: 10px;
        overflow: hidden;
    }
</style>
