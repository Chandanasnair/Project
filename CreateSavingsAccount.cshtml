
@{
    ViewBag.Title = "CreateSavingsAccount";
    Layout = "~/Views/Shared/Manager.cshtml";
}


<div class="container py-5">
    <h2 class="text-center mb-5 text-success fw-bold">
        <i class="bi bi-wallet2 me-2"></i> Create Savings Account
    </h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["Error"]</div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">

                @{
                    int customerId = ViewBag.CustomerID != null ? Convert.ToInt32(ViewBag.CustomerID) : 0;
                    bool accountExists = ViewBag.AccountExists != null && (bool)ViewBag.AccountExists;
                }
                @if (accountExists)
                {
                    <div class="alert alert-info text-center">
                        This customer already has a savings account and cannot open another.
                        <br />
                        <a href="@Url.Action("ViewSavingsAccounts", "Employee")" class="btn btn-outline-primary mt-3">View Savings Accounts</a>
                    </div>
                }
                else
                {




                <form action="@Url.Action("CreateSavingsAccount", "Manager")" method="post">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Customer ID</label>
                        <input type="text" class="form-control" value="@customerId" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Initial Balance</label>
                        <input type="number" step="0.01" name="SB_BALANCE" class="form-control" required />
                    </div>

                    <button type="submit" class="btn btn-success w-100">Create Account</button>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show text-center mt-3" role="alert">
                            @TempData["SuccessMessage"]
                            <br />
                            <a href="@Url.Action("ViewSavingsAccounts", "Manager")" class="btn btn-outline-success mt-2">View Accounts</a>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show text-center mt-3" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                </form>
                }

                <script>
                    setTimeout(function () {
                        var alerts = document.querySelectorAll('.alert');
                        alerts.forEach(function (alert) {
                            alert.classList.remove('show');
                        });
                    }, 5000);
                </script>

            </div>
        </div>
    </div>
</div>

